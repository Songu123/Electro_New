@model IEnumerable<E_commerce.Models.Category>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var stt = 1;
}
<div class="d-flex  flex-row-reverse me-4 p-2">
    <!-- Button trigger modal -->
    <a class="btn btn-success" asp-action="Create" >
        Add New Category
    </a>
</div>
<table class="table table-bordered ">
    <thead class="table-dark">
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <th >@stt</th>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <button class="btn btn-warning text-light"
                            data-bs-toggle="modal"
                            data-bs-target="#editModal"
                            data-id="@category.Id"
                            data-name="@category.Name"
                            data-description="@category.Description">
                        Update
                    </button>

                    <a asp-action="Delete" asp-route-id="@category.Id" onclick="return confirm('Bạn chắc muốn xóa?');" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>

<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sửa Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="editForm" method="post">
                <div class="modal-body">
                    <input type="hidden" id="editId" name="Id" />

                    <div class="mb-3">
                        <label class="form-label">Tên</label>
                        <input class="form-control" id="editName" name="Name" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea class="form-control" id="editDescription" name="Description"></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button class="btn btn-primary" type="submit">Lưu thay đổi</button>
                </div>
            </form>

        </div>
    </div>
</div>
@section Scripts {
    <script>
        var editModal = document.getElementById('editModal');

        editModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;

            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');
            var description = button.getAttribute('data-description');

            document.getElementById('editId').value = id;
            document.getElementById('editName').value = name;
            document.getElementById('editDescription').value = description;

            document.getElementById('editForm').action = '/Category/Edit/' + id;
        });
    </script>
}
